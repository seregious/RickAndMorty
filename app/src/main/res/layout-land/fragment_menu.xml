<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#063139"
    tools:context=".presentation.MainMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/charactersButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/characters_button"
            android:backgroundTint="@drawable/button_color"
            android:textColorHint="@color/teal_200"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/locationsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/locations_button"
            android:backgroundTint="@drawable/button_color"
            android:textColorHint="@color/teal_200"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/episodesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/episodes_button"
            android:backgroundTint="@drawable/button_color"
            android:textColorHint="@color/teal_200"
            app:cornerRadius="0dp" />

    </LinearLayout>

</FrameLayout>